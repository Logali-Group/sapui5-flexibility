<mvc:View
    controllerName="com.logaligroup.employees.controller.Details"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartfield="sap.ui.comp.smartfield">

    <uxap:ObjectPageLayout id="detailObjectPageLayout">

        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle id="detailsHeader">
            
                <uxap:expandedHeading>
                    <Title id="detailsHeaderTitle" text="{FullName}" wrapping="true"/>
                </uxap:expandedHeading>

                <uxap:snappedHeading>
                    <Title id="detailsSnappedTitle" text="{FullName}" wrapping="true"/>
                </uxap:snappedHeading>

                <uxap:actions>
                    <Button
                        id="buttonClose"
                        icon="sap-icon://full-screen"
                        press="handleFullScreen"
                        tooltip="{i18n>toggleFullScreen}"/>
                    <Button
                        id="buttonExit"
                        icon="sap-icon://decline"
                        press="onClosePress"
                        tooltip="{i18n>closeColumn}"/>
                </uxap:actions>

            </uxap:ObjectPageDynamicHeaderTitle>

        </uxap:headerTitle>

        <uxap:headerContent>
            <Avatar id="detailsAvatar" src="{Image}" displaySize="L"/>
        </uxap:headerContent>

        <uxap:sections>
            <uxap:ObjectPageSection id="personalInfoSection" title="{i18n>personalInfo}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="personalInfoSubSection">
                        <uxap:blocks>
                        
                            <smartForm:SmartForm id="employeeSmartForm" editable="false">

                                <smartForm:Group id="mainInfoGroup" title="{i18n>mainInfo}">
                                    <smartForm:GroupElement id="mainInfoTitle">
                                        <smartfield:SmartField id="sfTitle" value="{FullName}"/>
                                    </smartForm:GroupElement>
                                    <smartForm:GroupElement id="mainInfoBirthDate">
                                        <smartfield:SmartField id="sfBirthDate" value="{BirthDate}"/>
                                    </smartForm:GroupElement>
                                </smartForm:Group>

                                <smartForm:Group id="locationGroup" title="{i18n>location}">
                                    <smartForm:GroupElement id="location.Country">
                                        <smartfield:SmartField id="sfCountry" value="{Country_ID}"/>
                                    </smartForm:GroupElement>
                                    <smartForm:GroupElement id="location.Region">
                                        <smartfield:SmartField id="sfRegion" value="{Region_ID}"/>
                                    </smartForm:GroupElement>
                                    <smartForm:GroupElement id="location.City">
                                        <smartfield:SmartField id="sfCity" value="{City_ID}"/>
                                    </smartForm:GroupElement>
                                    <smartForm:GroupElement id="locationAddress">
                                        <smartfield:SmartField id="sfAddress" value="{Address}"/>
                                    </smartForm:GroupElement>
                                </smartForm:Group>

                            </smartForm:SmartForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection id="ordersSection" title="{i18n>orders}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="ordersSubSection">
                        <uxap:blocks>
                            <core:Fragment
                                fragmentName="com.logaligroup.employees.fragment.Orders"
                                type="XML"/>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>